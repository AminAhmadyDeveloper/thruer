{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "extends": ["ultracite"],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!generated/**/*.*",
      "!node_modules/**/*.*",
      "!.next/**/*.*",
      "!dist/**/*.*",
      "!build/**/*.*",
      "!coverage/**/*.*",
      "!styles/tailwind.css",
      "!next.config.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": "info",
      "complexity": "info",
      "performance": "info"
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  },
  "overrides": [
    {
      "includes": ["**/*.tsx", "**/*.jsx"],
      "linter": {
        "rules": {
          "suspicious": {
            "recommended": true,
            "noUnknownAtRules": "off"
          },
          "style": {
            "recommended": true,
            "useFragmentSyntax": "off",
            "noMagicNumbers": "off"
          },
          "complexity": {
            "recommended": true,
            "noImplicitCoercions": "off",
            "noExcessiveLinesPerFunction": "off",
            "noExcessiveCognitiveComplexity": "off"
          },
          "performance": {
            "recommended": true,
            "noBarrelFile": "off",
            "noReExportAll": "off",
            "noNamespaceImport": "off"
          }
        }
      }
    },
    {
      "includes": ["**/*.ts", "**/*.js"],
      "linter": {
        "rules": {
          "complexity": {
            "recommended": true,
            "noExcessiveLinesPerFunction": "off",
            "noExcessiveCognitiveComplexity": "off"
          },
          "performance": {
            "recommended": true,
            "noNamespaceImport": "off",
            "noBarrelFile": "off",
            "noReExportAll": "off"
          },
          "style": {
            "recommended": true,
            "noMagicNumbers": "off"
          }
        }
      }
    }
  ],
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
